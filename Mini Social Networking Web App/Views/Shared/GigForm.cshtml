@model Mini_Social_Networking_Web_App.ViewModels.GigFormViewModel
@{
    ViewBag.Title = Model.Heading;
    Layout = "~Views/Shared/_Layout.cshtml";
}

<h2>@Model.Heading</h2>
@using (Html.BeginForm("@Model.Action", "Gigs"))
{
    <p class="alert alert-info">All fields are <strong>required.</strong></p>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control" , autofocus = "autofocus" , required = "required"})
        @Html.ValidationMessageFor( m => m.Venue)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", type = "date", required = "required" })
        @Html.ValidationMessageFor(m => m.Date)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", type = "time", required = "required" })
        @Html.ValidationMessageFor(m => m.Time)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.Genre)
    </div>

    <button type="submit" value="Save" class="btn gig-create-btn btn-primary btn-lg">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


